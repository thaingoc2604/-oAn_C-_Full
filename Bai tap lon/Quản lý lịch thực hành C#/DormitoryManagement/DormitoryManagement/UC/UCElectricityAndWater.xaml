<UserControl x:Class="DormitoryManagement.UC.UCElectricityAndWater"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="16" FontWeight="Bold" Foreground="#FF116A98" Margin="132,12,133,6.687" Text="Giá Điện &amp; Nước" TextAlignment="Center" TextWrapping="Wrap" />
        <Label HorizontalAlignment="Left" Margin="38,20,0,24" Name="label1" Width="52" Grid.Row="1" VerticalContentAlignment="Center">Giá Điện:</Label>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="96,23.101,0,25.899" Name="tbElectricFee" Width="120" Grid.Row="1" />
        <Button Margin="195,10,197,10" Height="50" Name="btOk" Grid.Row="2" Click="btOk_Click">Cập Nhật</Button>
        <Label Margin="260,20,225,24" Name="label2" HorizontalAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1">Giá Nước:</Label>
        <TextBox HorizontalAlignment="Right" Height="24" Margin="0,23.101,99,25.899" Name="tbWaterFee" Width="120" Grid.Row="1" />
    </Grid>
</UserControl>
